<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".covid"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout_c">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view_c"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/try2"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/new_toolbar_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00008577"
                android:minHeight="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_dehaze_black_24dp"
                app:titleTextColor="@android:color/holo_red_dark" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/metal_mania"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="CURRENT LOCATION :"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_location_c"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:text=".....Current Location....."
                android:textSize="15dp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/button_location_c"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:textColor="#fff"
                android:background="#000"
                android:text="Click to Get Current Location" />

            <ImageButton
                android:id="@+id/covid_complaints"
                android:layout_width="220dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_height="150dp"
                android:tooltipText="Click here to Browse Image"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/image_meme" />


            <EditText
                android:id="@+id/description_c_comp"
                android:layout_width="280dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:hint="Describe Covid-19 Compalint :(Description)"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_upload_c"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Upload Covid-19 Complaint"
                android:textColor="#fff"
                android:layout_marginBottom="50dp"
                android:background="#000"/>

            <TextView
                android:id="@+id/text_show_complaints_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Click to see All Covid-19 Complaints"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:onClick="showallcovidcomp"/>


        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>